# Kernel-GraphRAG Sentinel Configuration Template
# Copy this file to .env and fill in your values

# ==== Kernel Source Configuration ====
KERNEL_ROOT=/workspaces/ubuntu/linux-6.13
DEFAULT_SUBSYSTEM=fs/ext4

# ==== Neo4j Database Configuration ====
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# ==== LLM Provider Configuration ====
# Choose one: openai, gemini, anthropic, ollama
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Google Gemini Configuration
#GEMINI_API_KEY=your-gemini-api-key-here
#GEMINI_MODEL=gemini-1.5-pro

# Anthropic Claude Configuration
#ANTHROPIC_API_KEY=your-anthropic-api-key-here
#ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Ollama Configuration (for local LLMs)
#OLLAMA_BASE_URL=http://localhost:11434
#OLLAMA_MODEL=llama3

# ==== Analysis Configuration ====
MAX_CALL_DEPTH=3
ENABLE_CPP_PREPROCESSING=true
INCLUDE_INDIRECT_CALLS=true

# ==== Logging Configuration ====
LOG_LEVEL=INFO
LOG_FILE=kernel-graphrag.log
